<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.DoublePlayer"
    android:background="#000"
    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="top"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layout_weight="0.2">


        <ImageView
            android:id="@+id/points_pink"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_gravity="left"
            android:layout_marginRight="80dp"
            android:layout_weight="1"
            android:cropToPadding="true"
            android:maxWidth="100dp"
            android:maxHeight="100dp"
            android:paddingTop="15dp"
            android:scaleType="centerInside"
            android:src="@drawable/pink_1"
            tools:ignore="RtlHardcoded" />

        <ImageView
            android:id="@+id/points_blue"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_gravity="right"
            android:layout_marginLeft="80dp"
            android:layout_weight="1"
            android:cropToPadding="true"
            android:maxWidth="100dp"
            android:maxHeight="100dp"
            android:paddingTop="15dp"
            android:scaleType="fitCenter"
            android:src="@drawable/blue_1" />


    </LinearLayout>

    <GridView
        android:id="@+id/board_grid_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:horizontalSpacing="1dp"
        android:numColumns="10"
        android:stretchMode="spacingWidthUniform"
        android:verticalSpacing="5dp"
        android:layout_weight="0.55"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="top"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:layout_weight="0.25">
    <ImageButton
    android:id="@+id/restartGame"
    android:layout_width="match_parent"
    android:layout_height="50dp"
        android:layout_marginStart="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="10dp"
    android:background="#000"
    android:padding="10dp"
    android:src="@drawable/restart_game"
    android:scaleType="centerInside"/>



    <ImageButton
        android:id="@+id/endGame"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:background="#000"
        android:padding="10dp"
        android:src="@drawable/end_game"
        android:scaleType="centerInside"/>
    </LinearLayout>

</LinearLayout>